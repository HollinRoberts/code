@{
    ViewData["Title"] = "Home Page";
}

<h1>Dojodachi</h1>
<div class="stats">
    Fullness:@ViewBag.fullness
    Happiness:@ViewBag.happiness
    Meals:@ViewBag.meals
    Energy:@ViewBag.energy
</div>
<div>
    <h3>@ViewBag.Result</h3>
</div>
<form action="feed" name="feed" method="post">
<button type="submit">Feed</button>
</form>
<form action="play" name="play" method="post">
<button  type="submit">Play</button>
</form>
<form action="work" method="post">
<button  type="submit">Work</button>
</form>
<form action="sleep" method="post">
<button  type="submit">Sleep</button>
</form>

